// Global style file
// This file should only contain styles that apply to index.html
// In some cases, it can also contain global overrides

body
  font-family "Roboto", "Noto Sans", "Noto Sans CJK", sans-serif
  > md-content
    height 100%

input, button, select, textarea
  font-family inherit
  font-size inherit
  line-height inherit

// Fix: leaflet controls should be below md-dialog
.leaflet-control-container
  .leaflet-top
  .leaflet-bottom
    z-index 75 !important

md-toolbar
  height 42px
  max-height 42px
  min-height 42px
  .md-toolbar-tools .md-button.md-icon-button
        margin 0
        width 40px
  @media screen and (max-width: 450px)
    .md-toolbar-tools
      font-size 18px
      .md-button.md-icon-button
              width 32px
  h1
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  h1 > i
    margin-right .3em

md-list md-list-item
  padding 0 !important