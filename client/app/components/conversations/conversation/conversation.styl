.conversation
  .conversationHeader
    min-height: 2em;
    border-bottom: 2px solid #ddd
    padding: 0.4em

    .title i
      font-size: 0.8em
      opacity: 0

    .title:hover i
      opacity: 1


    .participants
      font-size: 0.8em
      i
        font-size: 0.8em
        opacity: 0.5

      a
        text-decoration: none
        color: black
        opacity: 0.5

      a:hover
        opacity: 1

  .messagesBox
    min-height: 20em
    max-height: 200em
    overflow-y: scroll

  .separator
    border-top: 1px solid #000
    opacity: 0.1
    text-align: center
    font-size: 0.8em

  .separator.label
    margin-top: 0.5em
    height: 0.5em
    span
      background-color: #fff
      padding-left: 1em
      padding-right: 1em
      position: relative
      top: -0.5em


  .writeContainer
    border-top: 2px solid #ddd
    padding: 0.2em;


  textarea
    font-size: 0.9em
    width: 100%
    height: 100%
    border: 0
    outline: none
    resize: none
