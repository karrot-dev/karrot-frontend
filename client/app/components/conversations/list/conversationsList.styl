.conversationList
  .conversation
    border-bottom: 1px solid #eee
    opacity: 0.7
    text-decoration: none
    color: black
    border-left: 2px solid transparent

  .conversation:hover, .conversation.active
    opacity: 1

  .conversation.active
    border-left: 2px solid #ccc


  .conversation > div
    padding: 2px

  .picture
    background-color: #f0f0f0
    text-align:center
    vertical-align: middle
    height: 2em
    width: 2em

  .picture i
    margin-top: 0.5em
    opacity: 0.5


  .preview
    font-style: italic
    opacity: 0.9

  .preview i
    font-size: 0.6em

  .sub
    opacity: 0.5
    font-size: 0.7em

  .doubleLine
    line-height: 2em
