.pickupList-pickup
  border 2px solid rgba(0, 0, 0, .1)
  border-radius 5px
  margin-bottom 1em
  padding 0 !important
  min-height 0
  width 100%

  a
    color inherit
    text-decoration none
    margin-right .5em

  .md-caption
    display inline-block
    margin-left .3em
    margin-top .3em

.pickupList-pickup-info-container
  margin 1em 0
  padding .5em

.pickupList-pickup-info-container:first-child
  margin-right .5em


.pickupList-pickup-left
  padding .4em .6em

.pickupList-pickup-people
  padding .4em
  line-height 1.5

.pickupList-pickup-person
  padding .2em
  margin-right .4em
  cursor pointer
  display inline-block
  vertical-align middle
  height 2em

.pickupList-pickup-right
  padding .2em .4em
  border-radius 0 5px 5px 0

.pickupList-pickup-img
  width 2em
  height 2em
  border-radius 50%