wallpost
  display block
  margin 0.8em
  border-top 1px solid lightgrey
  padding-top 1em
  .whiteframe
    border-radius 3px
  .w-header
    height 34px
    .w-icon, profile-picture, svg
      border-top-left-radius 3px
    .w-icon
      width 34px
      height 34px
      line-height 34px
      text-align center
    .w-desc
      background-color whiteSmoke
      text-align right
  .w-content expandable-panel
      padding 1em 0
  span
    margin-left 0.6em
    vertical-align top
  a
    text-decoration none