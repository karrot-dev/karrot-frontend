@import '~variables'

.edit-box
  width 100%
  padding 20px
  // background-color $grey-1
  background-color white
  transition background-color .3s ease
  &.changed
    background-color $yellow-1
  .actionButtons
    .q-btn
      margin 20px 0 0 5px
      float right
  .actionButtons:after
    content "."
    clear both
    display block
    visibility hidden
    height 0px
  .q-field
    margin 16px 0
    margin-bottom 40px
